<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pending_exercise_tv"
            style="@style/NormalText"
            android:layout_marginLeft="@dimen/margin_32dp"
            android:layout_marginTop="@dimen/margin_24dp"
            android:elevation="@dimen/margin_12dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Pending Exercise"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_tv"
            style="@style/FaintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginHorizontal="@dimen/margin_32dp"
            android:fontFamily="@font/poppins"
            android:text="@string/pending_exercise"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/continue_exercise_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pending_exercise_tv" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continue_exercise_btn"
            android:layout_width="104dp"
            android:layout_height="38dp"
            android:layout_marginBottom="@dimen/margin_40dp"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/description_tv" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_new_exercise_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingHorizontal="@dimen/margin_12dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_40dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/ubuntu_medium"
            android:text="New Exercise"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/description_tv"
            app:layout_constraintTop_toBottomOf="@+id/description_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>